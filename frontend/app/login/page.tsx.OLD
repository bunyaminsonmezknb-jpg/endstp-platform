'use client';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import { createBrowserClient } from '@supabase/ssr';

export default function LoginPage() {
  const router = useRouter();
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [debugInfo, setDebugInfo] = useState<string>('');

  // âœ… FIX: supabase client oluÅŸtur
  const supabase = createBrowserClient(
    process.env.NEXT_PUBLIC_SUPABASE_URL!,
    process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!
  );

  async function handleLogin(e: React.FormEvent) {
    e.preventDefault();
    
    if (loading) return;
    
    setLoading(true);
    setError(null);
    setDebugInfo('');

    try {
      // 1) Auth login
      console.log('ğŸ” [LOGIN] Step 1: Auth login...');
      const { data: authData, error: authError } = await supabase.auth.signInWithPassword({
        email: email.trim(),
        password,
      });

      if (authError) {
        console.error('âŒ [LOGIN] Auth error:', authError);
        throw new Error(authError.message);
      }
      if (!authData.session) {
        console.error('âŒ [LOGIN] Session oluÅŸturulamadÄ±');
        throw new Error('Session oluÅŸturulamadÄ±');
      }

      console.log('âœ… [LOGIN] Auth successful, user:', authData.session.user.id);
      setDebugInfo(`âœ… Auth OK: ${authData.session.user.email}`);

      // 2) Role kontrolÃ¼
      console.log('ğŸ” [LOGIN] Step 2: Role kontrolÃ¼...');
      const { data: profile, error: profileError } = await supabase
        .from('user_profiles')
        .select('role')
        .eq('id', authData.session.user.id)
        .single();

      if (profileError) {
        console.error('âŒ [LOGIN] Profile fetch error:', profileError);
        setDebugInfo(`âš ï¸ Profile error: ${profileError.message} - Fallback to student`);
        // Fallback: student
        router.push('/student/dashboard');
        return;
      }

      const role = profile?.role ?? 'student';
      console.log('âœ… [LOGIN] Role bulundu:', role);
      setDebugInfo(`âœ… Role: ${role}`);

      // 3) Role-based redirect
      console.log('ğŸš€ [LOGIN] Step 3: Redirect...', role);
      
      if (role === 'admin') {
        console.log('â†’ Admin paneline yÃ¶nlendiriliyor: /admin');
        router.push('/admin');
      } else if (role === 'coach') {
        console.log('â†’ Coach paneline yÃ¶nlendiriliyor: /coach/dashboard');
        router.push('/coach/dashboard');
      } else {
        console.log('â†’ Student paneline yÃ¶nlendiriliyor: /student/dashboard');
        router.push('/student/dashboard');
      }

    } catch (err: any) {
      console.error('âŒ [LOGIN] Fatal error:', err);
      setError(err?.message ?? 'GiriÅŸ baÅŸarÄ±sÄ±z');
      setDebugInfo(`âŒ Error: ${err?.message}`);
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-purple-50">
      <div className="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
        <h1 className="text-2xl font-bold text-gray-900 mb-6">End.STP GiriÅŸ</h1>

        {debugInfo && (
          <div className="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-900 text-sm font-mono">
            {debugInfo}
          </div>
        )}

        {error && (
          <div className="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
            {error}
          </div>
        )}

        <form onSubmit={handleLogin} className="space-y-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Email
            </label>
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              required
              disabled={loading}
            />
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Åifre
            </label>
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
              required
              disabled={loading}
            />
          </div>

          <button
            type="submit"
            disabled={loading}
            className="w-full py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 disabled:opacity-60 disabled:cursor-not-allowed transition"
          >
            {loading ? 'GiriÅŸ yapÄ±lÄ±yor...' : 'GiriÅŸ Yap'}
          </button>
        </form>

        <div className="mt-6 text-center text-sm text-gray-600">
          <p className="font-semibold mb-2">Test kullanÄ±cÄ±lar:</p>
          <div className="space-y-1">
            <p className="font-mono text-xs">
              <span className="text-purple-700">admin2@admin.com</span> / admin123admin
            </p>
            <p className="font-mono text-xs">
              <span className="text-blue-700">student@test.com</span> / test123
            </p>
          </div>
        </div>

        <div className="mt-6 p-3 bg-yellow-50 border border-yellow-200 rounded-lg text-xs">
          <p className="font-semibold text-yellow-900 mb-1">ğŸ› Debug Mode:</p>
          <p className="text-yellow-800">
            Console'u aÃ§ (F12 â†’ Console) ve login akÄ±ÅŸÄ±nÄ± takip et.
          </p>
        </div>
      </div>
    </div>
  );
}